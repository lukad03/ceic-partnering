          label#title6.desc(for='Field6')
            | Industry
          div
            select#Field6.field.select.medium(name='Field6', tabindex='5')
              option(value='Solar', selected='selected')
                | Solar
              option(value='Biofuels')
                | Biofuels
              option(value='Battery Storage')
                | Battery Storage
              option(value='Wind')
                | Wind
              option(value='Water')
                | Water
              option(value='Nuclear')
                | Nuclear
